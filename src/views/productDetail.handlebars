<div class="container my-4">
    <h1 class="text-center text-primary">Detalle del Producto</h1>

    <!-- Centrado de la tarjeta -->
    <div class="d-flex justify-content-center">
        <div class="card shadow-lg" style="max-width: 500px; min-height: 600px;">
            <!-- Ajustamos el tamaño de la imagen -->
            <img src="{{product.img.thumbnails}}" class="card-img-top" alt="{{product.img.alt}}" style="height: 350px; object-fit: contain;">
            <div class="card-body p-4">
                <h4 class="card-title">{{product.title}}</h4>
                <p class="card-text">{{product.description}}</p>
                <h5 class="fw-bold text-success">$ {{product.price}}</h5>
                <p class="text-muted">Stock: {{product.stock}}</p>

                <!-- Contador de cantidad -->
                <div class="d-flex align-items-center justify-content-center my-3">
                    <button id="decrease" class="btn btn-outline-secondary btn-sm">-</button>
                    <input id="quantity" type="text" class="form-control text-center mx-2" style="width: 60px;" readonly>
                    <button id="increase" class="btn btn-outline-secondary btn-sm">+</button>
                </div>

                <!-- Botón para agregar al carrito con id para capturarlo -->
                <button id="addToCartBtn" class="btn btn-primary w-100">Agregar al carrito</button>
            </div>
        </div>
    </div>
</div>

<script>
    const product = {
        stock: {{product.stock}},
        id: '{{product._id}}'
    };
</script>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/productDetail.js"></script>


